<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.baozoumanhua.fragment.ShouyeFragment">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:orientation="horizontal"
            android:id="@+id/shouye_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:text="精选"
                android:id="@+id/shouye_rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:text="最新"
                android:id="@+id/shouye_rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioButton>
            <RadioButton
                android:text="关注"
                android:id="@+id/shouye_rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></RadioButton>
        </RadioGroup>

    </LinearLayout>
        <com.example.baozoumanhua.viewpager.MyViewPager
            android:id="@+id/shouye_viewPager"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

        </com.example.baozoumanhua.viewpager.MyViewPager>




</LinearLayout>
